<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    helpPath="en/cq/current/wcm/default_components.html#Image"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <properties
            jcr:primaryType="cq:Widget"
            title="Properties"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./title"
                    xtype="textfield"/>
                <content
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Contents"
                    name="./highligths"
                    xtype="richtext"/>
                <buttonText
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Button Text"
                    name="./buttonText"
                    xtype="textfield"/>
                <buttonLink
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Link"
                    linkPattern="\{0}.html"
                    name="./buttonLink"
                    rootPath="/content/metlife"
                    rootTitle="MetLife"
                    xtype="pathfield"/>
                <link-target-button
                    jcr:primaryType="cq:Widget"
                    allowBlank="false"
                    anchor="90%"
                    defaultValue="_self"
                    fieldLabel="Open in"
                    key="target"
                    name="./targetButton"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <self
                            jcr:primaryType="nt:unstructured"
                            text="Same Page"
                            value="_self"/>
                        <blank
                            jcr:primaryType="nt:unstructured"
                            text="New Page"
                            value="_blank"/>
                    </options>
                </link-target-button>
                <quoteText
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Quote Text"
                    name="./quoteText"
                    xtype="textfield"/>
                <quoteLink
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Quote Link"
                    linkPattern="\{0}.html"
                    name="./quoteLink"
                    rootPath="/content/metlife"
                    rootTitle="MetLife"
                    xtype="pathfield"/>
                <link-target
                    jcr:primaryType="cq:Widget"
                    allowBlank="false"
                    anchor="90%"
                    defaultValue="_self"
                    fieldLabel="Open in"
                    key="target"
                    name="./targetQuote"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <self
                            jcr:primaryType="nt:unstructured"
                            text="Same Page"
                            value="_self"/>
                        <blank
                            jcr:primaryType="nt:unstructured"
                            text="New Page"
                            value="_blank"/>
                    </options>
                </link-target>
                <alt-text
                    jcr:primaryType="cq:Widget"
                    allowBlank="false"
                    fieldLabel="Image Alt Text"
                    name="./altText"
                    xtype="textfield"/>
            </items>
        </properties>
        <image
            jcr:primaryType="cq:Widget"
            cropParameter="./imageCrop"
            ddGroups="media"
            fileNameParameter="./fileName"
            fileReferenceParameter="./fileReference"
            mapParameter="./imageMap"
            name="./file"
            requestSuffix=".img.png"
            rotateParameter="./imageRotate"
            title="Image"
            xtype="html5smartimage"/>
    </items>
</jcr:root>
