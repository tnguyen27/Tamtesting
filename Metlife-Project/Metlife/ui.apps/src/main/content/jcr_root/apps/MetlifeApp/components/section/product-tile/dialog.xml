<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Product Tile"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="40 characters max."
                        fieldLabel="Title"
                        maxLength="40"
                        name="./title"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="160 characters max."
                        fieldLabel="Description"
                        maxLength="160"
                        name="./description"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        </rtePlugins>
                    </description>
                    <button-text
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="30 characters max."
                        fieldLabel="Button Text"
                        maxLength="30"
                        name="./buttonText"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldLabel="Link"
                        linkPattern="\{0}.html"
                        name="./link"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                    <link-target
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        anchor="90%"
                        defaultValue="_self"
                        fieldLabel="Open in"
                        key="target"
                        name="./target"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="Same Page"
                                value="_self"/>
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="New Page"
                                value="_blank"/>
                        </options>
                    </link-target>
                    <text-bottom
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Bottom Text"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <option-text
                                jcr:primaryType="cq:Widget"
                                anchor="90%"
                                fieldLabel="Option Text"
                                key="optionText"
                                name="./optionText"
                                type="select"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <link
                                        jcr:primaryType="nt:unstructured"
                                        text="Link Text"
                                        value="linkText"/>
                                    <number
                                        jcr:primaryType="nt:unstructured"
                                        text="Number Text"
                                        value="numberText"/>
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        text="Text Only"
                                        value="textOnly"/>
                                </options>
                                <listeners
                                    jcr:primaryType="nt:unstructured"
                                    loadcontent="function(field,record,path){Metlife.Components.HideTextFields.loadContent(field,record,path);}"
                                    selectionchanged="function(selection, value, isChanged){Metlife.Components.HideTextFields.selectionChanged(selection, value, isChanged);}"/>
                            </option-text>
                            <link-text
                                jcr:primaryType="cq:Widget"
                                anchor="90%"
                                fieldLabel="Link Text"
                                item-id="1-item"
                                name="./likTextField"
                                xtype="textfield"/>
                            <text-link
                                jcr:primaryType="nt:unstructured"
                                anchor="90%"
                                fieldLabel="Link"
                                item-id="4-item"
                                linkPattern="\{0}.html"
                                name="./linkText"
                                rootPath="/content/metlife"
                                rootTitle="MetLife"
                                xtype="pathfield"/>
                            <link-targetOption
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                anchor="90%"
                                defaultValue="_self"
                                fieldLabel="Open in"
                                item-id="5-item"
                                key="targetLink"
                                name="./targetLink"
                                type="select"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Same Page"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="New Page"
                                        value="_blank"/>
                                </options>
                            </link-targetOption>
                            <number-text
                                jcr:primaryType="cq:Widget"
                                anchor="90%"
                                fieldLabel="Number Text"
                                item-id="2-items"
                                name="./numberTextField"
                                xtype="textfield"/>
                            <number-phone
                                jcr:primaryType="cq:Widget"
                                anchor="90%"
                                fieldLabel="Number Phone"
                                item-id="6-item"
                                name="./numberPhone"
                                xtype="textfield"/>
                            <text-only
                                jcr:primaryType="cq:Widget"
                                anchor="90%"
                                fieldLabel="Text Only"
                                item-id="3-items"
                                name="./textOnlyField"
                                xtype="textfield"/>
                        </items>
                    </text-bottom>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
