<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="400"
    title="Privacy Policy Container"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <policy
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <description
                        jcr:primaryType="cq:Widget"
                        anchor="90%"
                        fieldLabel="Policy Header Description"
                        height="{Long}200"
                        name="./policyheaderdescription"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <color-text
                                        jcr:primaryType="nt:unstructured"
                                        cssName="privacy-policy-index__Description"
                                        text="Description"/>
                                </styles>
                            </styles>
                        </rtePlugins>
                    </description>
                    <links
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Links"
                        name="./policyheaderlinks"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <linklabel
                                    jcr:primaryType="cq:Widget"
                                    allowedBlank="{Boolean}false"
                                    anchor="100%"
                                    fieldDescription="Whit this value the policy will be created."
                                    fieldLabel="Policy Name"
                                    key="linklabel"
                                    title="linklabel"
                                    xtype="textfield"/>
                                <link-target
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="90%"
                                    defaultValue="_self"
                                    fieldLabel="Open in"
                                    key="target"
                                    name="./target"
                                    type="select"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Same Page"
                                            value="_self"/>
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New Page"
                                            value="_blank"/>
                                    </options>
                                </link-target>
                                <link
                                    jcr:primaryType="cq:Widget"
                                    anchor="100%"
                                    fieldDescription="Example &quot;http://www.google.com&quot; this field is ignored when Same page is selected."
                                    fieldLabel="Link Value"
                                    key="linkvalue"
                                    rootPath="/content/metlife"
                                    rootTitle="MetLife"
                                    xtype="pathfield"/>
                            </items>
                        </fieldConfig>
                    </links>
                </items>
            </policy>
        </items>
    </items>
</jcr:root>
