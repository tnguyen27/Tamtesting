<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Section Header Component"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <header
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Section Header Title"
                        name="./sectionHeader"
                        xtype="textfield"/>
                    <B_numberRows
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        anchor="95%"
                        defaultValue="1"
                        fieldLabel="Number Of Contacts"
                        name="./numberContacts"
                        validateOnBlur="true"
                        xtype="numberfield"/>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
