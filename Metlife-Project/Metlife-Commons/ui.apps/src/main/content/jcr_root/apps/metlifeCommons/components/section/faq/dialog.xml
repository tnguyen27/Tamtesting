<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="600"
    title="FAQ"
    width="950"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <basic
                jcr:primaryType="cq:Panel"
                title="Basic">
                <items jcr:primaryType="cq:WidgetCollection">
                    <filterlabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Filter label"
                        name="./filterLabel"
                        xtype="textfield"/>
                    <bottomtext
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Bottom text"
                        name="./bottomText"
                        xtype="textfield"/>
                    <expandlabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Expand label"
                        name="./expandLabel"
                        xtype="textfield"/>
                    <collapselabel
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Collapse label"
                        name="./collapseLabel"
                        xtype="textfield"/>
                    <dropdownDefault
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Drop Down Default Value:"
                        name="./selectDefault"
                        xtype="textfield"/>
                    <categories
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add category"
                        anchor="95%"
                        fieldDescription="Click the '+' to add a new category (the first category in this list will be the default)"
                        fieldLabel="Categories"
                        hideLabel="false"
                        name="./categories"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <categoryName
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Category Name"
                                    key="categoryName"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <faqs
                                    jcr:primaryType="cq:Widget"
                                    addItemLabel="Add Questions"
                                    fieldDescription="Click the '+' to add a new question"
                                    fieldLabel="Questions"
                                    key="faqs"
                                    minItems="{Long}1"
                                    xtype="multifield">
                                    <fieldConfig
                                        jcr:primaryType="cq:Widget"
                                        xtype="multifieldpanel">
                                        <items jcr:primaryType="cq:WidgetCollection">
                                            <question
                                                jcr:primaryType="nt:unstructured"
                                                allowBlank="false"
                                                anchor="98%"
                                                fieldLabel="Question"
                                                key="question"
                                                validateOnBlur="true"
                                                xtype="textfield"/>
                                            <answer
                                                jcr:primaryType="cq:Widget"
                                                allowBlank="false"
                                                anchor="98%"
                                                fieldLabel="Answer"
                                                height="{Long}160"
                                                key="answer"
                                                xtype="richtext">
                                                <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <subsuperscript
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                </rtePlugins>
                                            </answer>
                                        </items>
                                    </fieldConfig>
                                </faqs>
                            </items>
                        </fieldConfig>
                    </categories>
                </items>
            </basic>
        </items>
    </items>
</jcr:root>
