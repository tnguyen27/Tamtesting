<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="600"
    title="Contact Us Footer Dialog"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <information-list
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Click the '+' to add a new item"
                        fieldLabel="Information"
                        name="./informationList"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <information-label
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Information Label"
                                    key="informationLabel"
                                    xtype="textfield"/>
                                <information-link-label
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Information Link Label"
                                    key="informationLinkLabel"
                                    xtype="textfield"/>
                                <information-link
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Information Link"
                                    key="informationLink"
                                    linkPattern="\{0}.html"
                                    rootPath="/content/metlife"
                                    rootTitle="MetLife"
                                    xtype="pathfield"/>
                                <link-target
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    defaultValue="_self"
                                    fieldLabel="Open in"
                                    key="target"
                                    type="select"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Same Page"
                                            value="_self"/>
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New Page"
                                            value="_blank"/>
                                    </options>
                                </link-target>
                                <description-label
                                    jcr:primaryType="cq:Widget"
                                    anchor="95%"
                                    fieldLabel="Description"
                                    key="descriptionLabel"
                                    xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </information-list>
                    <informationField
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./informationList@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
