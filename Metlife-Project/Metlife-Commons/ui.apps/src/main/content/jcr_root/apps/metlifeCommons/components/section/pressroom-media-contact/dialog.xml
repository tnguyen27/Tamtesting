<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Media Contact Configuration"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <categories
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Categories"
                        name="./categories"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <A_categoryName
                                    jcr:primaryType="cq:Widget"
                                    anchor="100%"
                                    fieldLabel="Category Name"
                                    key="category"
                                    xtype="textfield"/>
                                <B_numberRows
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="100%"
                                    defaultValue="1"
                                    fieldLabel="Number Of Rows"
                                    hidden="{Boolean}true"
                                    key="numberRows"
                                    validateOnBlur="true"
                                    value="{Long}1"
                                    xtype="numberfield"/>
                            </items>
                        </fieldConfig>
                    </categories>
                    <categoriesfield
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./categories@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
