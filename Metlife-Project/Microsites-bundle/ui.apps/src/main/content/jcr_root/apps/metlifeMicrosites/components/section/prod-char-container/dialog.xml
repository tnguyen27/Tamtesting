<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="600"
    title="Product Comparison Chart Container"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <type
                        jcr:primaryType="cq:Widget"
                        defaultValue="1"
                        fieldLabel="Number of tables"
                        name="./type"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <one-item
                                jcr:primaryType="nt:unstructured"
                                text="1"
                                value="1"/>
                            <two-items
                                jcr:primaryType="nt:unstructured"
                                text="2"
                                value="2"/>
                            <three-items
                                jcr:primaryType="nt:unstructured"
                                text="3"
                                value="3"/>
                            <four-items
                                jcr:primaryType="nt:unstructured"
                                text="4"
                                value="4"/>
                            <five-items
                                jcr:primaryType="nt:unstructured"
                                text="5"
                                value="5"/>
                        </options>
                    </type>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./title"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <disclaimer
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Disclaimer"
                        name="./disclaimer"
                        validateOnBlur="true"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <disclaimer
                                        jcr:primaryType="nt:unstructured"
                                        text="Product Comparison Disclaimer"/>
                                    <bolddisclaimer
                                        jcr:primaryType="nt:unstructured"
                                        cssName="bold"
                                        text="Product Comparison Disclaimer Bold"/>
                                </styles>
                            </styles>
                        </rtePlugins>
                    </disclaimer>
                </items>
            </configuration>
            <main-column
                jcr:primaryType="cq:Panel"
                title="Main Column">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title-column
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldLabel="Title Column"
                        name="./titleColumn"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <sections
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Row"
                        fieldDescription="Click the '+' to add a new row"
                        fieldLabel="Rows"
                        key="rows"
                        name="./rows"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <title
                                    jcr:primaryType="nt:unstructured"
                                    anchor="95%"
                                    fieldLabel="Title"
                                    key="title"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <subTitle
                                    jcr:primaryType="nt:unstructured"
                                    anchor="95%"
                                    fieldLabel="SubTitle"
                                    key="subTitle"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </sections>
                    <sectionsfield
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./rows@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                </items>
            </main-column>
        </items>
    </items>
</jcr:root>
