<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Login"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <loginPageFieldset
                        jcr:primaryType="cq:Widget"
                        anchor="99%"
                        itemId="loginPageFieldset"
                        title="Login Page Path"
                        xtype="fieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <enableLogin
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Enable Campaign Login"
                                name="./enableCampaignLogin"
                                type="checkbox"
                                xtype="selection"/>
                            <loginLabel
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Login Text"
                                name="./loginLabel"
                                xtype="textfield"/>
                            <loginURL
                                jcr:primaryType="cq:Widget"
                                anchor="100%"
                                fieldLabel="URL for Login"
                                linkPattern="\{0}.html"
                                name="./loginURL"
                                rootPath="/content/metlife"
                                xtype="pathfield"/>
                            <loginTarget
                                jcr:primaryType="cq:Widget"
                                allowBlank="true"
                                defaultValue="_self"
                                fieldDescription="If the page to login is specified, you can choose between open it in the same page or another one."
                                fieldLabel="Open in"
                                name="./loginTarget"
                                type="select"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Same Page"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="New Page"
                                        value="_blank"/>
                                </options>
                            </loginTarget>
                        </items>
                    </loginPageFieldset>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
