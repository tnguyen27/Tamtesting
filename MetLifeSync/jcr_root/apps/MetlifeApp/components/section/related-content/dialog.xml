<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Related Content"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <sections
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Section"
                        fieldDescription="Click the '+' to add a new section"
                        fieldLabel="Section"
                        key="sections"
                        maxItems="{Long}3"
                        minItems="{Long}1"
                        name="./relatedContent"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <image
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    ddGroups="[media]"
                                    fieldLabel="Image"
                                    key="sectionimages"
                                    name="./sectionImages/fileReferences"
                                    rootPath="/content/dam"
                                    rootTitle="Assets"
                                    xtype="pathfield"/>
                                <alt
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Alt Text"
                                    key="alt"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <overlay_label
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Overlay label"
                                    key="overlay_label"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <title
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Title"
                                    key="title"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <link
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Link"
                                    key="link"
                                    linkPattern="\{0}.html"
                                    rootPath="/content/metlife"
                                    xtype="pathfield"/>
                                <description
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldDescription="120 characters max."
                                    fieldLabel="Description"
                                    key="description"
                                    maxLength="120"
                                    xtype="textarea"/>
                            </items>
                        </fieldConfig>
                    </sections>
                    <sectionsfield
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./relatedContent@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                    <imageNode
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./sectionImages/sling:resourceType"
                        value="xumakbase/components/section/base"
                        xtype="hidden"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
