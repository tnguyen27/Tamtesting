<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Product Card"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <main-content
                jcr:primaryType="cq:Panel"
                title="Main Content">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        anchor="98%"
                        fieldLabel="Title"
                        name="./productTitle"
                        xtype="textfield"/>
                    <intro
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        anchor="98%"
                        fieldLabel="Intro"
                        name="./productIntro"
                        xtype="textfield"/>
                    <content
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        anchor="98%"
                        fieldLabel="Content"
                        name="./productContent"
                        xtype="richtext"/>
                    <read-faqs-label
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Read FAQs Label"
                        name="./productReadFaqsLabel"
                        xtype="textfield"/>
                </items>
            </main-content>
            <expanded-content
                jcr:primaryType="cq:Panel"
                title="Expanded Content">
                <items jcr:primaryType="cq:WidgetCollection">
                    <expand-label
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Expand Label"
                        name="./productExpandLabel"
                        xtype="textfield"/>
                    <close-label
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Close Label"
                        name="./productCloseLabel"
                        xtype="textfield"/>
                    <expanded-intro-label
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Expanded Intro Label"
                        name="./productExpandedIntroLabel"
                        xtype="textfield"/>
                    <expanded-content
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Expanded Content"
                        name="./productExpandedContent"
                        xtype="richtext"/>
                </items>
            </expanded-content>
            <action
                jcr:primaryType="cq:Panel"
                title="Action">
                <items jcr:primaryType="cq:WidgetCollection">
                    <button-label
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Button Label"
                        name="./productActionButtonLabel"
                        xtype="textfield"/>
                    <button-link
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Button Link"
                        linkPattern="\{0}.html"
                        name="./productActionButtonLink"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                    <top-text
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Top Text"
                        name="./productActionTopText"
                        xtype="richtext"/>
                    <bottom-text
                        jcr:primaryType="nt:unstructured"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Bottom Text"
                        name="./productActionBottomText"
                        xtype="textfield"/>
                    <bottom-link
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Bottom Link"
                        linkPattern="\{0}.html"
                        name="./productActionBottomLink"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                </items>
            </action>
        </items>
    </items>
</jcr:root>
