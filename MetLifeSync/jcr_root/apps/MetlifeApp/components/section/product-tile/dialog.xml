<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Product Tile"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="40 characters max."
                        fieldLabel="Title"
                        maxLength="40"
                        name="./title"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="160 characters max."
                        fieldLabel="Description"
                        maxLength="160"
                        name="./description"
                        xtype="textarea"/>
                    <button-text
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="30 characters max."
                        fieldLabel="Button Text"
                        maxLength="30"
                        name="./buttonText"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldLabel="Link"
                        linkPattern="\{0}.html"
                        name="./link"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                    <bottom-text
                        jcr:primaryType="nt:unstructured"
                        fieldLabel="Bottom Text"
                        name="./bottomText"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <lists
                                jcr:primaryType="nt:unstructured"
                                features=""/>
                            <justify
                                jcr:primaryType="nt:unstructured"
                                features=""/>
                            <links
                                jcr:primaryType="nt:unstructured"
                                features="[modifylink,unlink]"/>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="[sourceedit]"/>
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <cta-link
                                        jcr:primaryType="nt:unstructured"
                                        cssName="cta-link"
                                        text="Call to Action Link"/>
                                </styles>
                            </styles>
                        </rtePlugins>
                        <isRichTextFlag
                            jcr:primaryType="cq:Widget"
                            ignoreData="{Boolean}true"
                            name="./textIsRich"
                            value="true"
                            xtype="hidden"/>
                        <htmlRules jcr:primaryType="nt:unstructured">
                            <docType jcr:primaryType="nt:unstructured">
                                <typeConfig
                                    jcr:primaryType="nt:unstructured"
                                    useSemanticMarkup="{Boolean}true">
                                    <semanticMarkupMap
                                        jcr:primaryType="nt:unstructured"
                                        em="i"
                                        strong="b"/>
                                </typeConfig>
                            </docType>
                            <blockHandling
                                jcr:primaryType="nt:unstructured"
                                removeSingleParagraphContainer="{Boolean}true"/>
                        </htmlRules>
                    </bottom-text>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
