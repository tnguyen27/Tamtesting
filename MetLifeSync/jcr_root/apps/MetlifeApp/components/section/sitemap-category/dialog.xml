<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Sitemap"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Sitemap Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <sitemap-title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sitemap Title"
                        name="./sitemapTitle"
                        xtype="textfield"/>
                    <sitemap-path
                        jcr:primaryType="cq:Widget"
                        allowBlank="true"
                        anchor="98%"
                        fieldLabel="Sitemap Path"
                        linkPattern="\{0}.html"
                        name="./sitemapPath"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                    <type
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Number of rows"
                        name="./rowType"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <one-item
                                jcr:primaryType="nt:unstructured"
                                text="One Row"
                                value="1"/>
                            <two-items
                                jcr:primaryType="nt:unstructured"
                                text="Two Rows"
                                value="2"/>
                        </options>
                    </type>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
