<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Link Configuration"
    width="650"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <label
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Label"
                        name="./label"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <main-link
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="URL"
                        linkPattern="\{0}.html"
                        name="./mainlink"
                        rootPath="/content/metlife"
                        validateOnBlur="true"
                        xtype="pathfield"/>
                    <target-main-link
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        defaultValue="_self"
                        fieldLabel="Target"
                        key="target"
                        name="./targetlink"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="Same Page"
                                value="_self"/>
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="New Page"
                                value="_blank"/>
                        </options>
                    </target-main-link>
                </items>
            </tab1>
            <left
                jcr:primaryType="cq:Panel"
                title="Left Items">
                <items jcr:primaryType="cq:WidgetCollection">
                    <links
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Link"
                        fieldDescription="Click the '+' to add a new link"
                        fieldLabel="Links"
                        hideLabel="false"
                        maxItems="{Long}6"
                        minItems="{Long}1"
                        name="./leftLinks"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <first-line
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    fieldLabel="First Line"
                                    key="firstLineText"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <second-line
                                    jcr:primaryType="cq:Widget"
                                    fieldLabel="Second Line"
                                    key="secondLineText"
                                    xtype="textfield"/>
                                <A_icon
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Icon"
                                    key="icon"
                                    name="./leftLinksIcons/fileReferences"
                                    rootPath="/content/dam"
                                    validateOnBlur="true"
                                    xtype="pathfield"/>
                                <C_pages
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="URL"
                                    key="path"
                                    linkPattern="\{0}.html"
                                    rootPath="/content/metlife"
                                    validateOnBlur="true"
                                    xtype="pathfield"/>
                                <D_target
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    defaultValue="_self"
                                    fieldLabel="Target"
                                    key="target"
                                    type="select"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Same Page"
                                            value="_self"/>
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New Page"
                                            value="_blank"/>
                                    </options>
                                </D_target>
                            </items>
                        </fieldConfig>
                    </links>
                    <linksTH
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./leftLinks@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                    <iconsNode
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./leftLinksIcons/sling:resourceType"
                        value="xumakbase/components/section/base"
                        xtype="hidden"/>
                </items>
            </left>
            <right
                jcr:primaryType="cq:Panel"
                title="Right Items">
                <items jcr:primaryType="cq:WidgetCollection">
                    <links
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Link"
                        fieldDescription="Click the '+' to add a new link"
                        fieldLabel="Links"
                        hideLabel="false"
                        maxItems="{Long}4"
                        minItems="{Long}0"
                        name="./rightLinks"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <label
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    fieldLabel="Label"
                                    key="label"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <A_icon
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Icon"
                                    key="icon"
                                    name="./rightLinksIcons/fileReferences"
                                    rootPath="/content/dam"
                                    validateOnBlur="true"
                                    xtype="pathfield"/>
                                <C_pages
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="URL"
                                    key="path"
                                    linkPattern="\{0}.html"
                                    rootPath="/content/metlife"
                                    validateOnBlur="true"
                                    xtype="pathfield"/>
                                <D_target
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    defaultValue="_self"
                                    fieldLabel="Target"
                                    key="target"
                                    type="select"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Same Page"
                                            value="_self"/>
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New Page"
                                            value="_blank"/>
                                    </options>
                                </D_target>
                            </items>
                        </fieldConfig>
                    </links>
                    <linksTH
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./rightLinks@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                    <iconsNode
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./rightLinksIcons/sling:resourceType"
                        value="xumakbase/components/section/base"
                        xtype="hidden"/>
                </items>
            </right>
        </items>
    </items>
</jcr:root>
