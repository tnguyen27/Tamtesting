<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Small product card"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        title="Button text"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <button-text
                                jcr:primaryType="nt:unstructured"
                                allowBlank="false"
                                anchor="95%"
                                fieldDescription="Both lines must be less than or equal to 30 characters"
                                fieldLabel="Line one"
                                id="firstLineText"
                                maxLength="30"
                                name="./buttonText"
                                validateOnBlur="{Boolean}true"
                                validator="function(value) { return Metlife.Components.SmallProductCard.validate(value); }"
                                xtype="textfield"/>
                            <secondline
                                jcr:primaryType="cq:Widget"
                                anchor="95%"
                                fieldDescription="Both lines must be less than or equal to 30 characters"
                                fieldLabel="Line two"
                                id="secondLineText"
                                maxLength="30"
                                name="./secondLineText"
                                validateOnBlur="{Boolean}true"
                                validator="function(value) { return Metlife.Components.SmallProductCard.validate(value); }"
                                xtype="textfield"/>
                        </items>
                    </title>
                    <link
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldLabel="Link"
                        linkPattern="\{0}.html"
                        name="./link"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                </items>
            </tab1>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Icon"
                xtype="html5smartimage"/>
        </items>
    </items>
</jcr:root>
