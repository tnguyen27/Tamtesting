<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    heigth="700"
    title="Hero Carousel"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <hero-carousel
                jcr:primaryType="cq:Panel"
                title="Hero Carousel">
                <items jcr:primaryType="cq:WidgetCollection">
                    <rotation-interval
                        jcr:primaryType="nt:unstructured"
                        allowDecimals="false"
                        allowNegative="false"
                        anchor="98%"
                        fieldDescription="Seconds"
                        fieldLabel="Rotation time"
                        name="./rotationTime"
                        xtype="numberfield"/>
                    <homeSliderLinks
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add a new link and image to the carousel"
                        fieldDescription="Click the '+' to add a new link and image"
                        fieldLabel="Hero Carousel"
                        hideLabel="false"
                        maxItems="{Long}4"
                        name="./homeSliderLinks"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <A_image
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Image"
                                    key="homeSliderImage"
                                    name="./homeSliderImages/fileReferences"
                                    rootPath="/content/dam"
                                    validateOnBlur="true"
                                    xtype="pathfield"/>
                                <B_URL
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="URL"
                                    key="path"
                                    linkPattern="\{0}.html"
                                    rootPath="/content/metlife"
                                    xtype="pathfield"/>
                                <C_AltText
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Alt Text"
                                    key="altText"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <D_Target
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    defaultValue="_self"
                                    fieldLabel="Target"
                                    key="target"
                                    type="select"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Same Page"
                                            value="_self"/>
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New Page"
                                            value="_blank"/>
                                    </options>
                                </D_Target>
                                <E_FirstLineCaption
                                    jcr:primaryType="cq:Widget"
                                    anchor="95%"
                                    fieldLabel="First line image caption"
                                    key="firstLineImageCaption"
                                    xtype="textfield"/>
                                <F_SecondLineCaption
                                    jcr:primaryType="cq:Widget"
                                    anchor="95%"
                                    fieldLabel="Second line image caption"
                                    key="secondLineImageCaption"
                                    xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </homeSliderLinks>
                    <homeSliderImagesField
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./homeSliderLinks@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                    <imageNode
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./homeSliderImages/sling:resourceType"
                        value="xumakbase/components/section/base"
                        xtype="hidden"/>
                </items>
            </hero-carousel>
        </items>
    </items>
</jcr:root>
