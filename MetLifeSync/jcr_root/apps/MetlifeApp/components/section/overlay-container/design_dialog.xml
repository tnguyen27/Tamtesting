<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="550"
    title="Overlay Component"
    width="850"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Tab 1">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <subtitle
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Subtitle"
                        name="./subtitle"/>
                    <content
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add new description"
                        fieldLabel="Content Overlay"
                        name="./bodyoverlay"
                        title="Content Overlay"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            hideLabel="false"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <description
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    anchor="100%"
                                    fieldLabel="Description"
                                    hideLabel="false"
                                    key="description"
                                    title="Description"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <bullets
                                    jcr:primaryType="cq:Widget"
                                    addItemLabel="Add new bullet"
                                    anchor="100%"
                                    hideLabel="true"
                                    key="bullets"
                                    title="bullets"
                                    xtype="multifield">
                                    <fieldConfig
                                        jcr:primaryType="nt:unstructured"
                                        xtype="textarea"/>
                                </bullets>
                            </items>
                        </fieldConfig>
                    </content>
                    <contentfield
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./bodyoverlay@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
