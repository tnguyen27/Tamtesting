<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Panel"
    title="General">
    <items jcr:primaryType="cq:WidgetCollection">
        <vanity
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="Vanity URL"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <vanityPathRedirect
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Redirect Vanity URL"
                    name="./sling:redirect"
                    type="checkbox"
                    xtype="selection"/>
                <vanityPath
                    jcr:primaryType="cq:Widget"
                    cls="cq-propsdialog-vanityurl"
                    fieldLabel="Vanity URL"
                    name="./sling:vanityPath"
                    xtype="multifield">
                    <fieldConfig
                        jcr:primaryType="nt:unstructured"
                        allowBlank="{Boolean}false"
                        xtype="textfield"/>
                </vanityPath>
            </items>
        </vanity>
        <onofftime
            jcr:primaryType="cq:Widget"
            cls="cq-propsdialog-set-onofftime"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            hideMode="offsets"
            title="On/Off Time"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <ontime
                    jcr:primaryType="cq:Widget"
                    ctCls="cq-propsdialog-ontime"
                    fieldLabel="On Time"
                    name="./onTime"
                    xtype="datetime"/>
                <onTimeHint
                    jcr:primaryType="cq:Widget"
                    ignoreData="{Boolean}true"
                    name="./onTime@TypeHint"
                    value="Date"
                    xtype="hidden"/>
                <offtime
                    jcr:primaryType="cq:Widget"
                    ctCls="cq-propsdialog-offtime"
                    fieldLabel="Off Time"
                    name="./offTime"
                    xtype="datetime"/>
                <offTimeHint
                    jcr:primaryType="cq:Widget"
                    ignoreData="{Boolean}true"
                    name="./offTime@TypeHint"
                    value="Date"
                    xtype="hidden"/>
            </items>
        </onofftime>
        <more_titles
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="More Titles and Description"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <pagetitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Page Title"
                    name="./pageTitle"
                    xtype="textfield"/>
                <subtitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Subtitle"
                    name="./subtitle"
                    xtype="textfield"/>
                <navtitle
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Navigation Title"
                    name="./navTitle"
                    xtype="textfield"/>
                <description
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Description"
                    name="./jcr:description"
                    xtype="textarea"/>
            </items>
        </more_titles>
        <number-phone-title
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="Number Phone Title"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <numberPhone
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Number Phone"
                    name="./numberPhone"
                    xtype="textfield"/>
            </items>
        </number-phone-title>
        <basic
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}false"
            collapsible="{Boolean}false"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./jcr:title"
                    xtype="textfield"/>
                <hideinnav
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Hide in Navigation"
                    inputValue="true"
                    name="./hideInNav"
                    type="checkbox"
                    xtype="selection"/>
                <imageresourcetype
                    jcr:primaryType="cq:Widget"
                    ignoreData="true"
                    name="./image/sling:resourceType"
                    value="foundation/components/image"
                    xtype="hidden"/>
                <tags
                    jcr:primaryType="cq:Widget"
                    cls="cq-propsdialog-tags"
                    fieldLabel="Tags/Keywords"
                    name="./cq:tags"
                    xtype="tags"/>
            </items>
        </basic>
        <legalDoc
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            title="Legal Doc configuration"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <legalDocId
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Legal Doc ID"
                    name="./legalDocId"
                    xtype="textfield"/>
                <legalDocExpDate
                    jcr:primaryType="cq:Widget"
                    fieldLabel="LD Expiration Date"
                    name="./legalDocExpDate"
                    xtype="datefield"/>
                <dateFormat
                    jcr:primaryType="cq:Widget"
                    defaultValue="MM/dd/yy"
                    fieldLabel="Date Display Format"
                    name="./dateFormat"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <MM-DD-YY
                            jcr:primaryType="nt:unstructured"
                            text="MM-DD-YY"
                            value="MM/dd/yy"/>
                        <DD-MM-YY
                            jcr:primaryType="nt:unstructured"
                            text="DD-MM-YY"
                            value="dd/MM/yy"/>
                        <MM-DD-YYYY
                            jcr:primaryType="nt:unstructured"
                            text="MM-DD-YYYY"
                            value="MM/dd/yyyy"/>
                        <DD-MM-YYYY
                            jcr:primaryType="nt:unstructured"
                            text="DD-MM-YYYY"
                            value="dd/MM/yyyy"/>
                    </options>
                </dateFormat>
            </items>
        </legalDoc>
    </items>
</jcr:root>
