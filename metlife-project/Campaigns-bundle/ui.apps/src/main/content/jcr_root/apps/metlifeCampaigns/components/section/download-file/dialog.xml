<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="File Download Campaign Component"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <label
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Label"
                        name="./label"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        fieldDescription="E.g. (PDF - XXX KB)"
                        fieldLabel="Description"
                        name="./description"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Link"
                        name="./pdflink/fileReferences"
                        regex="/.(pdf|doc|docx|xls|xlsx|ppt|pptx)$/i"
                        rootPath="/content/dam/metlifecom"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                    <pdfNode
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./pdflink/sling:resourceType"
                        value="xumakbase/components/section/base"
                        xtype="hidden"/>
                    <alt-text
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Image Alt Text"
                        name="./altText"
                        xtype="textfield"/>
                    <link-target
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        anchor="94%"
                        defaultValue="_self"
                        fieldLabel="Open in"
                        key="target"
                        name="./target"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="Same Page"
                                value="_self"/>
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="New Page"
                                value="_blank"/>
                        </options>
                    </link-target>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
