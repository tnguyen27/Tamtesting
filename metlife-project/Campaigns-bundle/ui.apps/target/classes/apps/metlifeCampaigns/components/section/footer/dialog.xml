<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Footer Component Dialog"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <linksTab
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <enabledComponent
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}true"
                        fieldLabel="Enable Footer"
                        name="./enableFooter"
                        type="checkbox"
                        xtype="selection"/>
                    <footer
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Footer"
                        maxItems="{Long}6"
                        name="./footer"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <footer-label
                                    jcr:primaryType="cq:Widget"
                                    anchor="100%"
                                    fieldLabel="Footer Label"
                                    key="footerlabel"
                                    title="footerlabel"
                                    xtype="textfield"/>
                                <footer-link
                                    jcr:primaryType="cq:Widget"
                                    anchor="100%"
                                    fieldLabel="Footer Link"
                                    key="footerlink"
                                    linkPattern="\{0}.html"
                                    title="footerlink"
                                    xtype="pathfield"/>
                                <link-target
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    defaultValue="_self"
                                    fieldLabel="Open in"
                                    key="target"
                                    name="./target"
                                    type="select"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Same Page"
                                            value="_self"/>
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New Page"
                                            value="_blank"/>
                                    </options>
                                </link-target>
                            </items>
                        </fieldConfig>
                    </footer>
                    <footerId
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./footer@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                </items>
            </linksTab>
            <legalTextTab
                jcr:primaryType="cq:Panel"
                title="Legal Text">
                <items jcr:primaryType="cq:WidgetCollection">
                    <legalText
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Legal Text"
                        height="{Long}200"
                        name="./legalText"
                        xtype="richtext"/>
                </items>
            </legalTextTab>
        </items>
    </items>
</jcr:root>
