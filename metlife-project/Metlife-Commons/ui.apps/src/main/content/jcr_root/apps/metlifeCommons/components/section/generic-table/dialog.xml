<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="{Long}700"
    title="Generic Table"
    width="{Long}900"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <selecttable
                        jcr:primaryType="cq:Widget"
                        defaultValue="normaltable"
                        fieldLabel="Table type"
                        name="./selecttable"
                        type="radiogroup"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <radiobutton1
                                jcr:primaryType="cq:Widget"
                                text="2 Columns Table"
                                value="2columnstable"/>
                            <radiobutton2
                                jcr:primaryType="cq:Widget"
                                text="Normal Table"
                                value="normaltable"/>
                        </options>
                    </selecttable>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Table Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <table
                        jcr:primaryType="cq:Widget"
                        height="{Long}500"
                        name="./table"
                        xtype="tableedit2"/>
                    <csvpath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="[If you select a CSV file the manual table is ignored.]"
                        fieldLabel="CSV File"
                        name="./csvpath"
                        rootPath="/content/dam/metlifecom"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
