<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="600"
    itemId="pressDialog"
    title="Press Article"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title-subtitle
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Title &amp; Subtitle"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <article-primary-heading
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                anchor="98%"
                                fieldLabel="Article Title"
                                itemId="titleArticle"
                                name="./articlePrimaryHeading"
                                xtype="textfield"/>
                            <article-subtitle
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}true"
                                anchor="98%"
                                fieldLabel="Article Subtitle"
                                name="./articleSubtitle"
                                xtype="textarea"/>
                            <article-title-jcr
                                jcr:primaryType="cq:Widget"
                                itemId="articleTitlejcr"
                                name="../articleTitle"
                                xtype="hidden"/>
                        </items>
                    </title-subtitle>
                    <date-location-topics
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Date, Location &amp; Topics"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <publishedDate
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                fieldLabel="Published Date"
                                format="F d, Y"
                                itemId="publishedDateSource"
                                name="./publishedDate"
                                xtype="datefield"/>
                            <location
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Location"
                                itemId="locationSource"
                                name="./location"
                                xtype="textfield"/>
                            <topics
                                jcr:primaryType="cq:Widget"
                                addItemLabel="Add a Topic"
                                fieldLabel="Topics"
                                itemId="topicsSource"
                                name="./topics"
                                xtype="multifield">
                                <fieldConfig
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    name="./topicList"
                                    options="$PATH.topics.json"
                                    type="select"
                                    xtype="selection"/>
                            </topics>
                            <topicsfield
                                jcr:primaryType="nt:unstructured"
                                ignoreData="true"
                                name="./topics@TypeHint"
                                value="String[]"
                                xtype="hidden"/>
                            <publishedDate-jcr
                                jcr:primaryType="cq:Widget"
                                itemId="datePublished"
                                name="../publishedDate"
                                xtype="hidden"/>
                            <location-jcr
                                jcr:primaryType="cq:Widget"
                                itemId="locationjcr"
                                name="../location"
                                xtype="hidden"/>
                            <topics-jcr
                                jcr:primaryType="cq:Widget"
                                itemId="topicsjcr"
                                name="../topics"
                                xtype="hidden"/>
                        </items>
                    </date-location-topics>
                    <body-text-article
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}true"
                        collapsible="{Boolean}true"
                        title="Body Text for Article"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <body-text
                                jcr:primaryType="cq:Widget"
                                height="500"
                                hideLabel="true"
                                name="./bodyTextArticle"
                                xtype="richtext">
                                <rtePlugins jcr:primaryType="nt:unstructured">
                                    <subsuperscript
                                        jcr:primaryType="nt:unstructured"
                                        features="*"/>
                                </rtePlugins>
                            </body-text>
                        </items>
                    </body-text-article>
                </items>
            </configuration>
        </items>
    </items>
    <listeners
        jcr:primaryType="nt:unstructured"
        beforesubmit="function(dialog){MetlifeCommons.Components.PressArticle.beforesubmit(dialog);}"/>
</jcr:root>
