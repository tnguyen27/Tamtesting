<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="400"
    title="Privacy Policy"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <policy
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <enabledComponent
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}true"
                        fieldLabel="Enable Privacy Policy"
                        name="./enableComponent"
                        type="checkbox"
                        xtype="selection"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        anchor="90%"
                        fieldDescription="Description of the policy."
                        fieldLabel="Policy Description"
                        height="{Long}200"
                        name="./policydescription"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <color-text
                                        jcr:primaryType="nt:unstructured"
                                        cssName="privacy-policies-section__description"
                                        text="Description"/>
                                </styles>
                            </styles>
                        </rtePlugins>
                    </description>
                    <date
                        jcr:primaryType="cq:Widget"
                        fieldDescription="Date to show in Last Update field. You have to select the list of months in global properties."
                        fieldLabel="Date"
                        name="./date"
                        xtype="datefield"/>
                    <default
                        jcr:primaryType="cq:Widget"
                        defaultValue="Default Value"
                        ignoreData="true"
                        name="./defaultValue"
                        value="Default"
                        xtype="hidden"/>
                </items>
            </policy>
        </items>
    </items>
</jcr:root>
