<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="513"
    title="Contact Advisory Dialog"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Banner Content">
                <items jcr:primaryType="cq:WidgetCollection">
                    <titleImage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Header"
                        name="./titleImage"
                        xtype="textfield"/>
                    <descriptionImage
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Sub-Heading"
                        name="./descriptionImage"
                        xtype="textarea"/>
                </items>
            </tab1>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Background Image"
                xtype="html5smartimage"/>
            <tab3
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        anchor="98%"
                        fieldLabel="Title"
                        name="./titleAdvisory"
                        xtype="textfield"/>
                    <hiddenFields
                        jcr:primaryType="cq:Widget"
                        title="Hidden Fields"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <pageFrom
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Page From"
                                name="./pageFrom"
                                xtype="textfield"/>
                            <hiddenFieldList
                                jcr:primaryType="cq:Widget"
                                fieldLabel="Hidden Field List"
                                name="./hiddfieldList"
                                rootPath="/etc/acs-commons/lists/metlife/clr"
                                xtype="pathfield"/>
                        </items>
                    </hiddenFields>
                    <sub-title
                        jcr:primaryType="nt:unstructured"
                        anchor="98%"
                        fieldLabel="Subtitle"
                        name="./subTitleAdvisory"
                        xtype="textfield"/>
                    <contact-disclaimer
                        jcr:primaryType="nt:unstructured"
                        anchor="98%"
                        fieldLabel="Contact Disclaimer"
                        name="./contactDisclaimerAdvisory"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <large-title
                                        jcr:primaryType="nt:unstructured"
                                        cssName="contactDisclaimer hidden-field"
                                        text="Contact Disclaimer"/>
                                </styles>
                            </styles>
                        </rtePlugins>
                    </contact-disclaimer>
                    <thanks-message
                        jcr:primaryType="nt:unstructured"
                        anchor="98%"
                        fieldLabel="Thanks Message"
                        name="./thanksMessageAdvisory"
                        xtype="textfield"/>
                    <contact-details
                        jcr:primaryType="nt:unstructured"
                        anchor="98%"
                        fieldLabel="Contact Details"
                        name="./contactDetailsAdvisory"
                        xtype="textfield"/>
                    <other-contact
                        jcr:primaryType="nt:unstructured"
                        anchor="98%"
                        fieldLabel="Other Contact Title"
                        name="./otherContactTitleAdvisory"
                        xtype="textfield"/>
                    <thanks-sub-message
                        jcr:primaryType="nt:unstructured"
                        anchor="98%"
                        fieldLabel="Thanks Submessage"
                        name="./thanksSubMessageAdvisory"
                        xtype="textfield"/>
                </items>
            </tab3>
        </items>
    </items>
</jcr:root>
