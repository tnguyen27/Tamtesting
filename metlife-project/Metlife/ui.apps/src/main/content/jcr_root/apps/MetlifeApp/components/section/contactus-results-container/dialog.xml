<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Contact Results Container"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <config
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <Categories
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Category"
                        fieldDescription="Click the '+' to add a new category"
                        fieldLabel="Categories Names"
                        name="./categories"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <name
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="95%"
                                    fieldLabel="Name"
                                    key="name"
                                    maxLength="35"
                                    minLength="2"
                                    xtype="textfield"/>
                            </items>
                        </fieldConfig>
                    </Categories>
                    <header
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Header"
                        name="./header"
                        xtype="textfield"/>
                    <label
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Options Label"
                        name="./label"
                        xtype="textfield"/>
                    <categories-hint
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./categories@TypeHint"
                        value="String[]"
                        xtype="hidden"/>
                </items>
            </config>
        </items>
    </items>
</jcr:root>
