<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="640"
    title="Promo Module Title"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headline
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="30 Character max"
                        fieldLabel="Headline"
                        maxLength="30"
                        name="./headline"
                        placeholder="Headline not configured"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Description"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <description
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="Promo description"
                                hideLabel="{Boolean}true"
                                name="./description"
                                xtype="richtext"/>
                        </items>
                    </description>
                    <button
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Button"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <label
                                jcr:primaryType="nt:unstructured"
                                fieldDescription="Custom button label"
                                fieldLabel="Label"
                                name="./buttonLabel"
                                xtype="textfield"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                allowBlank="false"
                                fieldLabel="Link"
                                linkPattern="\{0}.html"
                                name="./link"
                                rootPath="/content/metlife"
                                rootTitle="MetLife"
                                xtype="pathfield"/>
                            <link-target
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                anchor="95%"
                                defaultValue="_self"
                                fieldLabel="Open in"
                                key="target"
                                name="./target"
                                type="select"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Same Page"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="New Page"
                                        value="_blank"/>
                                </options>
                            </link-target>
                        </items>
                    </button>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="Appearance">
                <items jcr:primaryType="cq:WidgetCollection">
                    <buttoncolor
                        jcr:primaryType="cq:Widget"
                        defaultValue="btn-brand-2nd"
                        fieldLabel="Button Color"
                        name="./buttonColor"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <green
                                jcr:primaryType="nt:unstructured"
                                text="Green"
                                value="btn-brand-2nd"/>
                            <blue
                                jcr:primaryType="nt:unstructured"
                                text="Blue"
                                value="btn-brand-1st"/>
                        </options>
                    </buttoncolor>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
