<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Contact Component"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Contact">
                <items jcr:primaryType="cq:WidgetCollection">
                    <contact-label
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Contact Label"
                        name="./contactLabel"
                        xtype="textfield"/>
                    <name
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Name"
                        name="./contactName"
                        xtype="textfield"/>
                    <number
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Number"
                        name="./contactNumber"
                        xtype="textfield"/>
                    <e-mail
                        jcr:primaryType="cq:Widget"
                        fieldLabel="E-mail"
                        name="./contactEmail"
                        xtype="textfield"/>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
