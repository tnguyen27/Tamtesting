<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Design Dialog Component"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Design Dialog">
                <items jcr:primaryType="cq:WidgetCollection">
                    <label
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Label"
                        name="./title"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        fieldLabel="Link"
                        linkPattern="\{0}.html"
                        name="./link"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                    <link-target
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        anchor="95%"
                        defaultValue="_self"
                        fieldLabel="Open in"
                        key="target"
                        name="./target"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="Same Page"
                                value="_self"/>
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="New Page"
                                value="_blank"/>
                        </options>
                    </link-target>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
