<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Large Banner"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headline
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="40 characters max."
                        fieldLabel="Headline"
                        maxLength="40"
                        name="./headline"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="150 characters max."
                        fieldLabel="Description"
                        maxLength="150"
                        name="./description"
                        xtype="textarea"/>
                    <button-text
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="30 characters max."
                        fieldLabel="Button Text"
                        maxLength="30"
                        name="./buttonText"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldLabel="Link"
                        linkPattern="\{0}.html"
                        name="./link"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                </items>
            </tab1>
            <appearance
                jcr:primaryType="cq:Panel"
                title="Appearance">
                <items jcr:primaryType="cq:WidgetCollection">
                    <imageposition
                        jcr:primaryType="cq:Widget"
                        defaultValue="right"
                        fieldLabel="Image Position"
                        name="./imagePosition"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <right
                                jcr:primaryType="nt:unstructured"
                                text="Right"
                                value="right"/>
                            <left
                                jcr:primaryType="nt:unstructured"
                                text="Left"
                                value="left"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,record,path){}"
                            selectionchanged="function(selection, value, isChanged) { }"/>
                    </imageposition>
                    <buttoncolor
                        jcr:primaryType="cq:Widget"
                        defaultValue="green"
                        fieldLabel="Button Color"
                        name="./buttonColor"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <green
                                jcr:primaryType="nt:unstructured"
                                text="Green"
                                value="green"/>
                            <blue
                                jcr:primaryType="nt:unstructured"
                                text="Blue"
                                value="blue"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,record,path){}"
                            selectionchanged="function(selection, value, isChanged) { }"/>
                    </buttoncolor>
                </items>
            </appearance>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Image"
                xtype="html5smartimage"/>
        </items>
    </items>
</jcr:root>
