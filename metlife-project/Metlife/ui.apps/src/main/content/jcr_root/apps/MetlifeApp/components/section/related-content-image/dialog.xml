<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Related Content Images Dialog"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <alt
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldLabel="Image Alt Text"
                        key="altText"
                        name="./alt"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <overlay_label
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldLabel="Overlay label"
                        key="overlay_label"
                        name="./overlay_label"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <title
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldLabel="Title"
                        key="title"
                        name="./title"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="cq:Widget"
                        anchor="95%"
                        fieldLabel="Link"
                        key="link"
                        linkPattern="\{0}.html"
                        name="./link"
                        rootPath="/content/metlife"
                        xtype="pathfield"/>
                    <link-target
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        anchor="95%"
                        defaultValue="_self"
                        fieldLabel="Open in"
                        key="target"
                        name="./target"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="Same Page"
                                value="_self"/>
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="New Page"
                                value="_blank"/>
                        </options>
                    </link-target>
                    <description
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldDescription="120 characters max."
                        fieldLabel="Description"
                        key="description"
                        maxLength="120"
                        name="./description"
                        xtype="textarea"/>
                    <imageNode
                        jcr:primaryType="nt:unstructured"
                        ignoreData="true"
                        name="./sectionImages/sling:resourceType"
                        value="xumakbase/components/section/base"
                        xtype="hidden"/>
                </items>
            </tab1>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Background Image"
                xtype="html5smartimage"/>
        </items>
    </items>
</jcr:root>
