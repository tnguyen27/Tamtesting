                        <option0
                            jcr:primaryType="nt:unstructured"
                            text="Default"
                            value="pad-t-sm"/>
                        <option1
                            jcr:primaryType="nt:unstructured"
                            text="0 px"
                            value="pad-t-sm-0"/>
                        <option2
                            jcr:primaryType="nt:unstructured"
                            text="10 px"
                            value="pad-t-sm-10"/>
                        <option3
                            jcr:primaryType="nt:unstructured"
                            text="20 px"
                            value="pad-t-sm-20"/>
                        <option4
                            jcr:primaryType="nt:unstructured"
                            text="30 px"
                            value="pad-t-sm-30"/>
                        <option5
                            jcr:primaryType="nt:unstructured"
                            text="40 px"
                            value="pad-t-sm-40"/>
                        <option6
                            jcr:primaryType="nt:unstructured"
                            text="50 px"
                            value="pad-t-sm-50"/>
                    </options>
                </mobileTop>
                <mobileBottom
                    jcr:primaryType="cq:Widget"
                    defaultValue="pad-b-sm"
                    fieldLabel="Bottom Padding:"
                    name="./mobilePaddingBottom"
                    type="select"
                    value="pad-b-sm"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <option0
                            jcr:primaryType="nt:unstructured"
                            text="Default"
                            value="pad-b-sm"/>
                        <option1
                            jcr:primaryType="nt:unstructured"
                            text="0 px"
                            value="pad-b-sm-0"/>
                        <option2
                            jcr:primaryType="nt:unstructured"
                            text="10 px"
                            value="pad-b-sm-10"/>
                        <option3
                            jcr:primaryType="nt:unstructured"
                            text="20 px"
                            value="pad-b-sm-20"/>
                        <option4
                            jcr:primaryType="nt:unstructured"
                            text="30 px"
                            value="pad-b-sm-30"/>
                        <option5
                            jcr:primaryType="nt:unstructured"
                            text="40 px"
                            value="pad-b-sm-40"/>
                        <option6
                            jcr:primaryType="nt:unstructured"
                            text="50 px"
                            value="pad-b-sm-50"/>
                    </options>
                </mobileBottom>
            </items>
        </mobile>
        <tablet
            jcr:primaryType="cq:Widget"
            collapsed="{Boolean}true"
            collapsible="{Boolean}true"
            fieldSubLabel="Blank space is default"
            title="Tablet Spacing"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <tabletTop
                    jcr:primaryType="cq:Widget"
                    defaultValue="pad-t-md"
                    fieldLabel="Top Padding:"
                    name="./tabletPaddingTop"
                    type="select"
                    value="pad-t-md"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
