                    fieldLabel="Bottom Padding:"
                    name="./tabletPaddingBottom"
                    type="select"
                    value="pad-b-md"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <option0
                            jcr:primaryType="nt:unstructured"
