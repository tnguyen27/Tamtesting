                            value="pad-b-lg-0"/>
                        <option2
                            jcr:primaryType="nt:unstructured"
                            text="10 px"
                            value="pad-b-lg-10"/>
                        <option3
                            jcr:primaryType="nt:unstructured"
                            text="20 px"
                            value="pad-b-lg-20"/>
                        <option4
                            jcr:primaryType="nt:unstructured"
                            text="30 px"
                            value="pad-b-lg-30"/>
                        <option5
                            jcr:primaryType="nt:unstructured"
                            text="40 px"
                            value="pad-b-lg-40"/>
                        <option6
                            jcr:primaryType="nt:unstructured"
                            text="50 px"
                            value="pad-b-lg-50"/>
                    </options>
                </desktopBottom>
            </items>
        </desktop>
        <defaultButton
            jcr:primaryType="cq:Widget"
            autoWidth="{Boolean}true"
            buttonAlign="center"
            handler="function(b,e){&#xa;&#x9;var dlg = b.findParentByType('panel');&#xa;&#x9;var selectBox = dlg.findByType('selection');&#xa;&#xa;&#x9;for(var i =0; i&lt; selectBox.length; i++){&#xa;&#x9;&#x9;selectBox[i].setValue(selectBox[i].defaultValue);&#xa;&#x9;}&#xa;};"
            text="Restore to Defaults"
            xtype="button"/>
    </items>
</jcr:root>
