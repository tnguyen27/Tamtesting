<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Panel"
    title="Template Configuration">
    <items jcr:primaryType="cq:WidgetCollection">
        <generalConfig
            jcr:primaryType="cq:Widget"
            path="/apps/metlifeCommons/components/page/htmlbase/customconfiguration/items.infinity.json"
            xtype="cqinclude"/>
        <promo-config
            jcr:primaryType="cq:Widget"
            collapsible="{Boolean}true"
            title="Promotion Module"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <promo-check-x
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Enable"
                    name="./enablePromo"
                    type="checkbox"
                    xtype="selection"/>
                <promo-select-x
                    jcr:primaryType="cq:Widget"
                    defaultValue="right"
                    fieldLabel="Promotion module location"
                    name="./promo-select"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <left
                            jcr:primaryType="nt:unstructured"
                            text="Left side (replace product selector)"
                            value="left"/>
                        <right
                            jcr:primaryType="nt:unstructured"
                            text="Right side (replace find an x)"
                            value="right"/>
                    </options>
                </promo-select-x>
            </items>
        </promo-config>
        <sitemap
            jcr:primaryType="cq:Widget"
            collapsible="{Boolean}true"
            title="Sitemap"
            xtype="dialogfieldset">
            <items jcr:primaryType="cq:WidgetCollection">
                <changefrequency
                    jcr:primaryType="cq:Widget"
                    defaultValue="monthly"
                    fieldLabel="Change Frequency"
                    name="./changefreq"
                    type="select"
                    value="monthly"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <daily
                            jcr:primaryType="nt:unstructured"
                            text="Daily"
                            value="daily"/>
                        <weekly
                            jcr:primaryType="nt:unstructured"
                            text="Weekly"
                            value="weekly"/>
                        <monthly
                            jcr:primaryType="nt:unstructured"
                            text="Monthly"
                            value="monthly"/>
                        <annualy
                            jcr:primaryType="nt:unstructured"
                            text="Annualy"
                            value="annualy"/>
                    </options>
                </changefrequency>
                <priority
                    jcr:primaryType="cq:Widget"
                    defaultValue="1"
                    fieldLabel="Priority"
                    name="./priority"
                    type="select"
                    value="1"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <_x0031_
                            jcr:primaryType="nt:unstructured"
                            text="1"
                            value="1"/>
                        <_x0030_.75
                            jcr:primaryType="nt:unstructured"
                            text="0.75"
                            value="0.75"/>
                        <_x0030_.50
                            jcr:primaryType="nt:unstructured"
                            text="0.50"
                            value="0.50"/>
                        <_x0030_.25
                            jcr:primaryType="nt:unstructured"
                            text="0.25"
                            value="0.25"/>
                    </options>
                </priority>
            </items>
        </sitemap>
    </items>
</jcr:root>
