<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Promotion Tile"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <headline
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="40 characters max."
                        fieldLabel="Headline"
                        maxLength="40"
                        name="./headline"
                        xtype="textfield"/>
                    <subheader
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="30 characters max."
                        fieldLabel="Subheader"
                        maxLength="30"
                        name="./subheader"
                        xtype="textfield"/>
                    <description
                        jcr:primaryType="nt:unstructured"
                        fieldDescription="120 characters max."
                        fieldLabel="Description"
                        maxLength="120"
                        name="./description"
                        xtype="textarea"/>
                    <button-text
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldDescription="30 characters max."
                        fieldLabel="Button Text"
                        maxLength="30"
                        name="./buttonText"
                        xtype="textfield"/>
                    <link
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        fieldLabel="Link"
                        linkPattern="\{0}.html"
                        name="./link"
                        rootPath="/content/metlife"
                        rootTitle="MetLife"
                        xtype="pathfield"/>
                    <link-target
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        anchor="95%"
                        defaultValue="_self"
                        fieldLabel="Open in"
                        key="target"
                        name="./target"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="Same Page"
                                value="_self"/>
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="New Page"
                                value="_blank"/>
                        </options>
                    </link-target>
                </items>
            </tab1>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Background Image"
                xtype="html5smartimage"/>
        </items>
    </items>
</jcr:root>
