<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    title="Mega Menu Configurations"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configurations">
                <items jcr:primaryType="cq:WidgetCollection">
                    <firstRow
                        jcr:primaryType="cq:Widget"
                        name="./firstRow/sling:resourceType"
                        value="nt:unstructure"
                        xtype="hidden"/>
                    <secondRow
                        jcr:primaryType="cq:Widget"
                        name="./secondRow/sling:resourceType"
                        value="nt:unstructure"
                        xtype="hidden"/>
                    <promos
                        jcr:primaryType="cq:Widget"
                        name="./promos/sling:resourceType"
                        value="nt:unstructure"
                        xtype="hidden"/>
                    <firstRowFieldSet
                        jcr:primaryType="cq:Widget"
                        collapsible="{Boolean}false"
                        title="First Row"
                        xtype="fieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <firstRowColumns
                                jcr:primaryType="cq:Widget"
                                allowBlank="{Boolean}false"
                                anchor="95%"
                                fieldDescription="Allows minimum of 2 columns and maximum of 4."
                                fieldLabel="Number of Columns"
                                maxValue="{Long}4"
                                minValue="{Long}2"
                                name="./numberColumnsFirstRow"
                                xtype="numberfield"/>
                        </items>
                    </firstRowFieldSet>
                    <secondRowFieldSet
                        jcr:primaryType="cq:Widget"
                        collapsible="{Boolean}false"
                        title="Second Row"
                        xtype="fieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <secondRowColumns
                                jcr:primaryType="cq:Widget"
                                anchor="95%"
                                fieldDescription="Allows maximum of 2 columns."
                                fieldLabel="Number of Columns"
                                maxValue="{Long}2"
                                name="./numberColumnsSecondRow"
                                xtype="numberfield"/>
                            <secondRowPromos
                                jcr:primaryType="cq:Widget"
                                anchor="95%"
                                fieldDescription="Allows maximum 2 promos."
                                fieldLabel="Number of Promos"
                                maxValue="{Long}2"
                                name="./numberPromosSecondRow"
                                xtype="numberfield"/>
                        </items>
                    </secondRowFieldSet>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
