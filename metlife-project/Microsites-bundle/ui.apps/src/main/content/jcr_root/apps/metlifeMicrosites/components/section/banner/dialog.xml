<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="470"
    title="Banner"
    width="555"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <manualConfiguration
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Add Bullets"
                        name="./addBullets"
                        type="checkbox"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,record,path){MetlifeMicrosites.Components.SmallPromoCard.loadContent(field,record,path);}"
                            selectionchanged="function(comp, val, isChecked) { MetlifeMicrosites.Components.SmallPromoCard.selectionChanged(comp, val, isChecked);}"/>
                    </manualConfiguration>
                    <headline
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        anchor="95%"
                        fieldDescription="40 characters max."
                        fieldLabel="Headline"
                        maxLength="40"
                        name="./headline"
                        xtype="textfield"/>
                    <subheader
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldLabel="Subheader"
                        itemId="subtitle"
                        name="./subheader"
                        xtype="richtext"/>
                    <config-link
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Links Configuration"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <button-text
                                jcr:primaryType="nt:unstructured"
                                allowBlank="{Boolean}true"
                                anchor="95%"
                                fieldDescription="If this field is empty the button will not be displayed"
                                fieldLabel="Button Text"
                                name="./buttonText"
                                xtype="textfield"/>
                            <link
                                jcr:primaryType="nt:unstructured"
                                allowBlank="false"
                                anchor="95%"
                                fieldLabel="Link"
                                linkPattern="\{0}.html"
                                name="./link"
                                rootPath="/content/metlife"
                                rootTitle="MetLife"
                                xtype="pathfield"/>
                            <link-target
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                anchor="95%"
                                defaultValue="_self"
                                fieldLabel="Open in"
                                key="target"
                                name="./target"
                                type="select"
                                xtype="selection">
                                <options jcr:primaryType="cq:WidgetCollection">
                                    <self
                                        jcr:primaryType="nt:unstructured"
                                        text="Same Page"
                                        value="_self"/>
                                    <blank
                                        jcr:primaryType="nt:unstructured"
                                        text="New Page"
                                        value="_blank"/>
                                </options>
                            </link-target>
                        </items>
                    </config-link>
                    <bottom-text
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldDescription="Text below of the button."
                        fieldLabel="Bottom Text"
                        name="./bottomText"
                        xtype="textarea"/>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                itemId="manualTab"
                title="Bullets">
                <items jcr:primaryType="cq:WidgetCollection">
                    <config-bullets
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Bullets Configuration"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <bullets
                                jcr:primaryType="cq:Widget"
                                addItemLabel="Add Text"
                                fieldDescription="Click the '+' to add a new text"
                                fieldLabel="Texts"
                                hideLabel="true"
                                name="./texts"
                                xtype="multifield">
                                <fieldConfig
                                    jcr:primaryType="cq:Widget"
                                    xtype="multifieldpanel">
                                    <items jcr:primaryType="cq:WidgetCollection">
                                        <A_title
                                            jcr:primaryType="nt:unstructured"
                                            allowBlank="true"
                                            anchor="95%"
                                            fieldLabel="Label"
                                            hideLabel="true"
                                            key="label"
                                            name="./label"
                                            validateOnBlur="true"
                                            xtype="textfield"/>
                                    </items>
                                </fieldConfig>
                            </bullets>
                        </items>
                    </config-bullets>
                </items>
            </tab2>
            <image
                jcr:primaryType="cq:Widget"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="Image"
                xtype="html5smartimage"/>
        </items>
    </items>
</jcr:root>
