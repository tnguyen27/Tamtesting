<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Subnavigation Dialog"
    width="600"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <manualConfiguration
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Manual Configuration"
                        name="./manualConfiguration"
                        type="checkbox"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,record,path){Metlife.Components.CategorySubnav.loadContent(field,record,path);}"
                            selectionchanged="function(comp, val, isChecked) { Metlife.Components.CategorySubnav.selectionChanged(comp, val, isChecked);}"/>
                    </manualConfiguration>
                    <path
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Categories"
                        itemId="categories"
                        name="./pathRef"
                        xtype="pathfield"/>
                </items>
            </configuration>
            <tab2
                jcr:primaryType="cq:Panel"
                itemId="manualTab"
                title="Manual Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <pages
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Page"
                        fieldDescription="Click the '+' to add a new page"
                        fieldLabel="Pages"
                        hideLabel="false"
                        maxItems="{Long}7"
                        name="./pages"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            xtype="multifieldpanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <A_title
                                    jcr:primaryType="nt:unstructured"
                                    allowBlank="false"
                                    fieldLabel="Label"
                                    key="navigationTitle"
                                    validateOnBlur="true"
                                    xtype="textfield"/>
                                <C_pages
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    anchor="100%"
                                    fieldLabel="URL"
                                    key="path"
                                    xtype="pathfield"/>
                                <D_target
                                    jcr:primaryType="cq:Widget"
                                    allowBlank="false"
                                    defaultValue="_self"
                                    fieldLabel="Open in"
                                    key="target"
                                    type="select"
                                    xtype="selection">
                                    <options jcr:primaryType="cq:WidgetCollection">
                                        <self
                                            jcr:primaryType="nt:unstructured"
                                            text="Same Page"
                                            value="_self"/>
                                        <blank
                                            jcr:primaryType="nt:unstructured"
                                            text="New Page"
                                            value="_blank"/>
                                    </options>
                                </D_target>
                            </items>
                        </fieldConfig>
                    </pages>
                </items>
            </tab2>
        </items>
    </items>
</jcr:root>
