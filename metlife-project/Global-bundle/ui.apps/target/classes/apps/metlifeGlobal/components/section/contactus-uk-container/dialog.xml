<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="Contact Us variation 2 with filter"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <configuration
                jcr:primaryType="cq:Panel"
                title="Configuration">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        anchor="95%"
                        fieldLabel="Title"
                        name="./title"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <dropdown-default-value
                        jcr:primaryType="nt:unstructured"
                        allowBlank="false"
                        anchor="95%"
                        fieldLabel="Dropdown Default Value"
                        name="./dropdownDefaultValue"
                        validateOnBlur="true"
                        xtype="textfield"/>
                    <options-dropdown
                        jcr:primaryType="cq:Widget"
                        addItemLabel="Add Option"
                        anchor="95%"
                        fieldDescription="Click the '+' to add a new option"
                        fieldLabel="Options"
                        minItems="{Long}1"
                        name="./optionsDropdown"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            allowBlank="false"
                            anchor="95%"
                            key="option"
                            validateOnBlur="true"
                            xtype="textfield"/>
                    </options-dropdown>
                </items>
            </configuration>
        </items>
    </items>
</jcr:root>
