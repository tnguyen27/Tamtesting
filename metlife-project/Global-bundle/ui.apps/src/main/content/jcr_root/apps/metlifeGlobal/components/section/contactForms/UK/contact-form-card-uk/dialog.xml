<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Static contact -uk configurations"
    width="700"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <placeholders
                jcr:primaryType="cq:Panel"
                title="Placeholders">
                <items jcr:primaryType="cq:WidgetCollection">
                    <firstName
                        jcr:primaryType="cq:Widget"
                        defaultValue="First Name"
                        fieldLabel="Name"
                        name="./firstName"
                        xtype="textfield"/>
                    <lastName
                        jcr:primaryType="cq:Widget"
                        defaultValue="Last Name"
                        fieldLabel="Last name"
                        name="./lastName"
                        xtype="textfield"/>
                    <employerName
                        jcr:primaryType="cq:Widget"
                        defaultValue="Company Name"
                        fieldLabel="Company Name"
                        name="./leadBasedOnEmployerName"
                        xtype="textfield"/>
                    <zip
                        jcr:primaryType="cq:Widget"
                        defaultValue="Post code"
                        fieldLabel="Zip"
                        name="./zip"
                        xtype="textfield"/>
                    <email
                        jcr:primaryType="cq:Widget"
                        defaultValue="Email"
                        fieldLabel="Email"
                        name="./email"
                        xtype="textfield"/>
                    <phone
                        jcr:primaryType="cq:Widget"
                        defaultValue="Phone ( 123-123-1234)"
                        fieldLabel="Phone"
                        name="./phone"
                        xtype="textfield"/>
                    <whichDescBest
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Configuration for which Describes you best"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <whichDescBest
                                jcr:primaryType="cq:Widget"
                                defaultValue="Which describes you best"
                                fieldLabel="Default value"
                                name="./whichDesc"
                                xtype="textfield"/>
                            <methodsPath
                                jcr:primaryType="cq:Widget"
                                allowBlank="false"
                                fieldLabel="Which Describes path"
                                name="./contactMethodList"
                                rootPath="/etc/acs-commons/lists/metlife/form-configuration/static-forms/uk"
                                xtype="pathfield"/>
                        </items>
                    </whichDescBest>
                    <comments
                        jcr:primaryType="cq:Widget"
                        defaultValue="Email"
                        fieldLabel="Email"
                        name="./commentsTxt"
                        xtype="textfield"/>
                </items>
            </placeholders>
            <labels
                jcr:primaryType="cq:Panel"
                title="Labels">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        defaultValue="Ask us to call you"
                        fieldLabel="Title"
                        name="./title"
                        xtype="textfield"/>
                    <subtitle
                        jcr:primaryType="cq:Widget"
                        defaultValue="All fields are required"
                        fieldLabel="Subtitle"
                        name="./subtitle"
                        xtype="textfield"/>
                    <buttonLabel
                        jcr:primaryType="cq:Widget"
                        defaultValue="Enviar"
                        fieldLabel="Button label"
                        name="./buttonLabel"
                        xtype="textfield"/>
                    <process_x0020_Label
                        jcr:primaryType="cq:Widget"
                        defaultValue="Processing"
                        fieldLabel="Process Text Label"
                        name="./processTxt"
                        xtype="textfield"/>
                    <disclaimer
                        jcr:primaryType="cq:Widget"
                        fieldLabel="Disclaimer"
                        name="./disclaimer"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <styles
                                jcr:primaryType="nt:unstructured"
                                features="*">
                                <styles jcr:primaryType="cq:WidgetCollection">
                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        cssName="contactDisclaimer hidden-field"
                                        text="Contact disclaimer style"/>
                                </styles>
                            </styles>
                        </rtePlugins>
                    </disclaimer>
                    <thanksMessage
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Configuration for thank you messages after submitted"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <thankYouMessageTitle
                                jcr:primaryType="cq:Widget"
                                defaultValue="Thank you for contacting us."
                                fieldLabel="Title"
                                name="./thankYouMessageTitle"
                                xtype="textfield"/>
                            <thankYouMessageContent
                                jcr:primaryType="cq:Widget"
                                defaultValue="Someone from MetLife will be reaching shortly to provide you help."
                                fieldLabel="Subtitle"
                                name="./thankYouMessageContent"
                                xtype="textfield"/>
                        </items>
                    </thanksMessage>
                    <errorsMessage
                        jcr:primaryType="cq:Widget"
                        collapsed="{Boolean}false"
                        collapsible="{Boolean}true"
                        title="Configuration for error messages after submitted"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <errorMessageTitle
                                jcr:primaryType="cq:Widget"
                                defaultValue="Error!"
                                fieldLabel="Title"
                                name="./errorMessageTitle"
                                xtype="textfield"/>
                            <errorMessageContent
                                jcr:primaryType="cq:Widget"
                                defaultValue="An error occured while submitting your information."
                                fieldLabel="Subtitle"
                                name="./errorMessageContent"
                                xtype="textfield"/>
                        </items>
                    </errorsMessage>
                </items>
            </labels>
        </items>
    </items>
</jcr:root>
